<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>
  <div class="login-flash-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :'登録パスワード' %><br />
    <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
  </div>

  <div class="login-btn">
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
<% end %>