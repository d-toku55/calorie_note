<!DOCTYPE html>
<html>
  <head>
    <title>EasyCalorieNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="header">
    <div class="header__bar row">
      <h1 class="grid-6"><a href="/">Easy Calorie Note</a></h1>
      <% if user_signed_in? %>
        <div class="grid-6">
          <%= link_to "topページへ", root_path, class: "post" %>
          <%= link_to "ログアウト", destroy_user_session_path, class: "post", method: :delete %>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規登録", new_user_registration_path, class: "post" %>
        </div>
      <% end %>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>

  <footer>
    <p>Copyright Easy Calorie Note 2020.</p>
  </footer>
</html>
